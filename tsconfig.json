{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
        "dom",
        "es6",
        "dom.iterable",
        "scripthost",
        "es2016.array.include"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
